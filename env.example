# 애플리케이션 설정
APP_NAME="NEULBO ML Server"
APP_VERSION="1.0.0"
DEBUG=True

# 서버 설정
HOST=0.0.0.0
PORT=8000

# 데이터베이스 설정
DATABASE_URL="postgresql://username:password@localhost:5432/neulbo_db"
DATABASE_ECHO=False

# 보안 설정
SECRET_KEY="your-very-secret-key-change-this-in-production"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ML 모델 설정
MODEL_PATH="app/ml_models/"
MAX_RECORDING_DURATION=43200  # 12시간 (초)
MIN_RECORDING_DURATION=3600   # 1시간 (초)
SENSOR_SAMPLING_RATE=1.0      # Hz
STAGE_INTERVAL_SECONDS=30
MODEL_CONFIDENCE_THRESHOLD=0.7
ENABLE_MODEL_CACHING=True

# CORS 설정 (쉼표로 구분)
ALLOWED_ORIGINS="http://localhost:3000,http://localhost:8080,http://127.0.0.1:3000"

# 로깅 설정
LOG_LEVEL="INFO"

# LLM 설정
OLLAMA_URL="http://localhost:11434"
LLM_MODEL="gpt-oss:20b"
LLM_TIMEOUT=30.0

